{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "taskfish",
  "version": "0.1.0",
  "identifier": "com.taskfish.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "taskfish",
        "width": 800,
        "height": 600,
        "dragDropEnabled": false,
        "decorations":true 
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/taskfish.ico"
    ]
  }
}